@model IEnumerable<WebStore.Models.EmployeeView>
@{
    ViewData["Title"] = "Список сотрудников";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" charset="utf-8" />
    <title>Index</title>
</head>
<body>
    <table>
        <tr>
            <td>Фамилия</td>
            <td>Имя</td>
            <td>Отчество</td>
            <td>Возраст</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.SurName</td>
                <td>@item.Patronymic</td>
                <td>@item.Age</td>
                <td>@Html.ActionLink("Детали", "Details", new { id = item.Id })</td>
            </tr>
        }
    </table>
</body>
</html>